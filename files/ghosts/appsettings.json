"ApplicationSettings": {
    "GhostsApiUrl": "http://localhost:5000/",        // this should be root url of your ghosts API server
    "Animations": {
      "IsEnabled": true,                             // set this to true to enable animation jobs
      "SocialGraph": {
        "IsEnabled": true,                           // set this to true to enable the entire module (inc. web gui access)
        "IsInteracting": true,                       // set this to true to actually run the interactions
        "MaximumSteps": 4000,                         // animator stops when it reaches this many steps
        "TurnLength": 900,                            // by default, a step is a cpu cycle, the higher this number, the slower the simulation
        "ChanceOfKnowledgeTransfer": 0.3,
        "Decay": {
          "StepsTo": 10,
          "ChanceOf": 0.05
        }
      },
      "SocialSharing": {
        "IsEnabled": true,                          // set this to true to enable the entire module (inc. web gui access)
        "IsInteracting": false,                      // set this to true to actually run the interactions
        "IsSendingTimelinesToGhostsApi": true,      // set this to true to actually send the timeline commands to the ghosts API
        "IsChatGptEnabled": false,                   // this is still under development, here be dragons
        "SocializerUrl": "http://socializer.com",    // change this to the root url of your in-game social server
        "MaximumSteps": 14000,
        "TurnLength": 9000                           // by default, a step is a cpu cycle, the higher this number, the slower the simulation
      },
      "SocialBelief": {
        "IsEnabled": true,                         // set this to true to enable the entire module (inc. web gui access)
        "IsInteracting": false,                     // set this to true to actually run the interactions
        "MaximumSteps": 14000,
        "TurnLength": 9000
      }
    }
  },
